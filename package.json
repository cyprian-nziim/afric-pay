{
  "name": "afric-pay",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "launch": "ng build --optimization --aot --configuration production --progress && npm run transloco:optimize",
    "launch-dev": "ng build --optimization --aot --configuration development --progress && npm run transloco:optimize",
    "i18n:extract": "transloco-keys-manager extract",
    "i18n:find": "transloco-keys-manager find",
    "transloco:optimize": "transloco-optimize dist/afric-pay/assets/i18n"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@jsverse/transloco": "^7.6.1",
    "@jsverse/transloco-persist-lang": "^7.0.2",
    "@tailwindcss/postcss": "^4.1.12",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.12",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.0.2",
    "@angular/cli": "^20.0.2",
    "@angular/compiler-cli": "^20.0.0",
    "@jsverse/transloco-keys-manager": "^7.0.2",
    "@jsverse/transloco-optimize": "^7.0.1",
    "@tailwindcss/typography": "^0.5.16",
    "@types/jasmine": "~5.1.0",
    "daisyui": "^5.0.54",
    "jasmine-core": "~5.7.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ngx-build-plus": "^20.0.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.2"
  }
}
